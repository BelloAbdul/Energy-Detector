<?xml version="1.0"?>
<block>
  <name>Energy_Detector_ff</name>
  <key>EdBlock_Energy_Detector_ff</key>
  <category>EdBlock</category>
  <import>import EdBlock</import>
  <make>EdBlock.Energy_Detector_ff($samples, $Pfa)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Samples</name>
    <key>samples</key>
    <type>int</type>
  </param>
   <param>
    <name>PFA</name>
    <key>Pfa</key>
    <type>float</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in0</name>
    <type>float</type>
  </sink>
  <sink>
    <name>in1</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
